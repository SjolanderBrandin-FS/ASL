{% extends 'layouts/base.twig'%}

{% block main_content %}
	<h2>All Products:</h2>
	<ul>
		{% for product in products %}
			<li>
				{{ product.title }}
				-
				<a href="/products/{{ product.id }}">Edit</a>
				<a href="/products/{{ product.id }}/delete">Delete</a>
			</li>
		{% endfor %}
		<br/>
		<a href="/products/new">Create New Products</a>
	</ul>
{% endblock %}