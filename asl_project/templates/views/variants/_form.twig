<form method="POST" action="/variants/{% if variant.id %}{{variant.id}}{% endif %}">
	{% if variant.id %}
		<input type="hidden" name="id" value="{{ variant.id }}"/>
	{% endif %}
	<div>
		<label for="title">Title:</label>
		<input type="text" name="title" id="title" value="{{variant.title}}"/>
	</div>
	<div>
		<label>Product:</label>
		<select name="productId">
			{% for product in products %}
				<option value="{{ product.id }}">{{ product.title }}</option>
			{% endfor %}
		</select>
	</div>
	<br/>
	<div>
		<input type="submit" name:"submit"/>
	</div>
</form>